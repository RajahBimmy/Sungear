extends layout

block content
    nav(class='navbar navbar-default')
        div(class='container-fluid')
            div(class='navbar-header')
                a(class='navbar-brand') #{title}
            div(class='collapse navbar-collapse')
                ul(class='nav navbar-nav')
                    li(class='dropdown')
                        a(href='#', class='dropdown-toggle', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') File
                        ul(class='dropdown-menu')
                            li
                                a(href='#', id='nav-load') Load...
                            li
                                a(href='#', id='screenshot') Screen Shot
                    li(class='dropdown')
                        a(href='#', class='dropdown-toggle', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') View
                        ul(class='dropdown-menu')
                            li
                                a(href='#') Genes
                                    //span(class='glyphicon glyphicon-ok')
                            li
                                a(href='#') Controls
                                    //span(class='glyphicon glyphicon-ok')
                            li
                                a(href='#') Sungear
                                    //span(class='glyphicon glyphicon-ok')
                            li
                                a(href='#') GO Terms
                                    //span(class='glyphicon glyphicon-ok')
                            li(role='separator', class='divider')
                            li
                                a(href='#') GeneLights
                                    //span(class='glyphicon glyphicon-ok')
                            li(role='separator', class='divider')
                            li
                                a(href='#') Reposition
                                    //span(class='glyphicon glyphicon-ok')
                            li
                                a(href='#') Relax Vessels
                                    //span(class='glyphicon glyphicon-ok')
                            li(class='disabled')
                                a(href='#') Full Screen
                                    //span(class='glyphicon glyphicon-ok')
                    li(class='dropdown')
                        a(href='#', class='dropdown-toggle', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') Help
                        ul(class='dropdown-menu')
                            li
                                a(href='#') About...
                            li
                                a(href='#') File Info...

    div(class='container')

        div(class='col-md-3')
            div(id='geneF', class='img-rounded')
                h3 Genes
                table(class='table table-striped img-rounded', id='geneFtable')
                    thead
                        tr
                            th ID
                            th Description
                    tbody(id='geneTableBody')

                input(type='text', name='geneSearch', id='geneSearch')
                a(class='btn btn-primary', id='geneFind', role='button') Find
                p(id='geneCount') TBD
                a(class='btn btn-primary', id='geneQuery', role='button') Query
                a(class='btn btn-primary', id='geneCopy', role='button') Copy

        div(class='col-md-6')
            div(id='controlF', class='img-rounded')
                // Control Dialog
                h3 Controls
                ul(id='controlFbuttons')
                    li
                        a(class='btn btn-primary', id='restartB', role='button', data-toggle='tooltip') Restart
                        a(class='btn btn-primary', id='allB', role='button', data-toggle='tooltip') All
                        a(class='btn btn-primary', id='noneB', role='button', data-toggle='tooltip') None
                        a(class='btn btn-primary', id='backB', role='button', data-toggle='tooltip') <<
                        a(class='btn btn-primary', id='forwardB', role='button', data-toggle='tooltip') >>
                        a(class='btn btn-primary', id='narrowB', role='button', data-toggle='tooltip') Narrow
                        a(class='btn btn-primary', id='unionB', role='button', data-toggle='tooltip')
                            span(class='glyphicon glyphicon-plus-sign')
                        a(class='btn btn-primary', id='intersectB', role='button', data-toggle='tooltip')
                            span(class='glyphicon glyphicon-adjust')
                        a(class='btn btn-primary', id='coolB', role='button', data-toggle='tooltip') Find Cool
                            // TODO: @Dennis add a dropdown menu to this button which is toggle-able.
                table(class='table table-striped img-rounded', id='controlFtable')
                    thead(id='controlFtableHeader')
                        tr
                            th(id='controlFtableAdd') +/-
                            th Name
                            th # of Genes
                            th View Group
                    tbody(id='controlFtableBody')

                div(id='controlFbottom')
                    a(class='btn btn-primary', id='removeB', role='button') Remove
                    a(class='btn btn-primary', id='exportB', role='button') Export

            div(id='sungearF', class='img-rounded')
                h3 Sungear Dialog
                div(id='sungearGui')

        div(class='col-md-3')
            div(id='goTerms', class='img-rounded')
                h3 GO Terms
                div(id='goTop')
                    a(class='btn btn-primary', id='expand', role='button') Expand
                    a(class='btn btn-primary', id='collapse', role='button') Collapse
                div(id='goHierarchy', class='img-rounded')
                    ul
                        li GO Terms
                        ul(id='goDir')

                div(id='goZscore', class='img-rounded')
                    ul(id='goList')

                input(type='text', name='zSearch', id='zSearch')
                a(class='btn btn-primary', id='zFind', role='button') Find
                p(id='goCount') GO Terms: ####
                a(class='btn btn-primary', id='goCopy', role='button') Copy
                select(id='sort', class='btn btn-primary')
                    option(disabled, selected, value) --select a sort option--
                    option(value='zScore') Sort by Z-Score
                    option(value='name') Sort by Name
                    option(value='count') Sort by Count

    script(src='/javascripts/out.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')